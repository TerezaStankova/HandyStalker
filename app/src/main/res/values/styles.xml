<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spinnerDropDownItemStyle">@style/mySpinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerStyleItem</item>
    </style>

    <style name="myDetailTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/TextOnLight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="mySpinnerStyle" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/TextOnLight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mySpinnerStyleItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/TextOnLight</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
